<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProjectVE.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="">


    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <Image
                Aspect="AspectFit"
                HeightRequest="300"
                HorizontalOptions="Center"
                Source="logo.png"
                WidthRequest="150" />

            <Entry
                Margin="0,10,0,0"
                BackgroundColor="#F5F5F5"
                HorizontalOptions="FillAndExpand"
                Keyboard="Text"
                Placeholder="Matricula"
                TextColor="Black" />

            <Entry
                Margin="0,10,0,0"
                BackgroundColor="#F5F5F5"
                HorizontalOptions="FillAndExpand"
                IsPassword="True"
                Placeholder="Senha"
                TextColor="Black" />

            <Button
                Margin="0,20,0,0"
                BackgroundColor="#0b3793"
                Clicked="Button_Clicked_Login"
                HorizontalOptions="FillAndExpand"
                Text="Entrar"
                TextColor="White" />


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
